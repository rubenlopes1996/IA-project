package snake;

import java.awt.Color;

public class Cell {
    public static final Color COLOR = Color.GREEN;

    private final int line, column;
    private SnakeAgent agent;
    private Food food;
    private Wall wall;
    private int numVisited;
    private Tail tail;

    public Cell(int line, int column) {
        this.line = line;
        this.column = column;
    }

    public int getLine() {
        return line;
    }

    public int getColumn() {
        return column;
    }

    public SnakeAgent getAgent() {
        return agent;
    }



    public void setAgent(SnakeAgent agent) {
        this.agent = agent;
    }

    public boolean hasAgent() {
        return agent != null;
    }

    public boolean hasTail() {
        return tail != null;
    }

    public Food getFood() { return food; }

    public Tail getTail(){return tail;}

    public void setFood(Food food) { this.food = food; }
    public void setTail(Tail tail) { this.tail = tail; }

    public boolean hasFood() { return food != null; }


    public Color getColor() {
        if (hasAgent()) {
            return agent.getColor();
        } else if (hasFood()) {
            return food.getColor();
        } else if(hasWall()) {
            return wall.getColor();
        } else if(hasTail()){
            return tail.getColor();
        }
            return Cell.COLOR;
    }

    public boolean hasWall(){
        return wall != null;
    }

    public Wall getWall(){
        return wall;
    }

    public void setWall(Wall wall) {
        this.wall = wall;
    }


    public int getNumVisited() {
        return numVisited;
    }
    public void incrementNumVisited(){
        this.numVisited+=1;
    }
}